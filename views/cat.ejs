<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1 class="category-h1"><%= c.name %></h1>

    <div class="categories-items">
      <% category.forEach(item => { %>
      <div class="item padding">
        <div>
          <p><b><%= item.name %> </b> &nbsp; <%= item.category %></p>
        </div>
        <div>
          <a href="/item/<%= item.id %>"
            ><img src="/edit.png" alt="" height="50" width="50" class="editA"
          /></a>
          <form action="/item/<%= item.id %>/delete" method="post">
            <button type="submit" class="btn">
              <img src="/delete.png" alt="" height="50" width="50" />
            </button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
